<%- include('partials/_header') %>

    <div class="container">
        <div class="row">
            <!--Formulario-->
            <div class="col-5">
                <div class="row">
                    <div class="card bg-secondary">
                        <div class="card-body">
                        <h2 class="mb-4">Agregar una tarea</h2>
                            <form action="/agregarTarea" method="POST">
                                <div class="form-group mt-2">
                                    <textarea name="descripcion" rows="10" placeholder="Inserte una descripción" class="form-control bg-dark text-light" required></textarea>
                                </div>
                                    <button type="submit" class="btn w-100 btn-warning mt-4">Agregar tarea</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--Listado-->
            <div class="col-7">
                <table class="table table-bordered table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Descripción</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < tareas.length; i++) { %>
                            <tr>
                                <td class="text-center align-middle"><%= tareas[i].descripcion %></td>
                                <td>
                                    <a href="/toggle/<%= tareas[i]._id %>" class="btn <%= tareas[i].status ? 'btn-success' : 'btn-secondary' %>"><% if (tareas[i].status) { %>
                                        <span class="material-icons">check_box</span>
                                        <% } else { %>
                                        <span class="material-icons">check_box_outline_blank</span>
                                        <% } %>
                                    </a>
                                    <a href="/editarTarea/<%= tareas[i]._id %>" class="btn btn-primary"><span class="material-icons">edit</span></a>
                                    <a href="/eliminarTarea/<%= tareas[i]._id %>" class="btn btn-danger"><span class="material-icons">delete</span></a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="container mt-4">
        <div class="row">
            <!--Formulario notas-->
            <div class="col-5">
                <div class="row">
                    <div class="card bg-secondary">
                        <div class="card-body">
                            <h2 class="mb-4">Agregar una nota</h2>
                            <form action="/agregarNota" method="POST">
                                <div class="form-group my-2">
                                    <input type="text" name="titulo" placeholder="Inserte un título" class="form-control bg-dark text-light" required>
                                </div>
                                <div class="form-group my-4">
                                    <textarea name="descripcion" rows="10" placeholder="Inserte una descripción" class="form-control bg-dark text-light"></textarea>
                                </div>
                                <button type="submit" class="btn w-100 btn-warning">Agregar nota</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!--Listado notas-->
            <div class="col-7">
                <table class="table table-bordered table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th>Opciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (let i = 0; i < notas.length; i++) { %>
                            <tr>
                                <td class="text-center align-middle"><%= notas[i].titulo %></td>
                                <td class="text-center align-middle"><%= notas[i].descripcion %></td>
                                <td>
                                    <a href="/editarNota/<%= notas[i]._id %>" class="btn btn-primary"><span class="material-icons">edit</span></a>
                                    <a href="/eliminarNota/<%= notas[i]._id %>" class="btn btn-danger"><span class="material-icons">delete</span></a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

<%- include('partials/_footer') %>